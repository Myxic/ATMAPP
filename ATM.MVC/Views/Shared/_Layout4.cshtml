<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ATMWEB.MVC</title>


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/ATMWEB.MVC.styles.css" asp-append-version="true" />*@

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,600;1,700&family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Raleway:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">

    <link href="~/lib/bootstrap/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/bootstrap/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/bootstrap/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/lib/bootstrap/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/lib/bootstrap/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/lib/bootstrap/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/lib/bootstrap/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/lib/bootstrap/assets/css/style.css" rel="stylesheet">

</head>
<body>

    <header id="header" class="header d-flex align-items-center">

        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
            <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <img src="~/lib/Bootstrap/assets/img/logo.png" alt="">
                <h1 class="changecolour">WOWBANK<span>.</span></h1>
            </a>
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="changecolour" asp-controller="Home" asp-action="CustomerLogin" role="button">Customer</a></li>
                    <li><a class="changecolour" asp-controller="Home" asp-action="AdminLogin" role="button">Admin</a></li>
                    <li><a class="changecolour" asp-controller="ATMPages" asp-action="Index" role="button">SAMPLE Customer</a></li>
                    <li><a class="changecolour" asp-controller="AdminPages" asp-action="Index" role="button">Sample Admin</a></li>
                </ul>
            </nav><!-- .navbar -->

            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

        </div>
    </header>


    @RenderBody()


    <!-- Vendor JS Files -->
    <script src="~/lib/bootstrap/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/lib/bootstrap/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/vendor/chart.js/chart.umd.js"></script>
    <script src="~/lib/bootstrap/vendor/echarts/echarts.min.js"></script>
    <script src="~/lib/bootstrap/vendor/quill/quill.min.js"></script>
    <script src="~/lib/bootstrap/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/lib/bootstrap/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/lib/bootstrap/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/lib/bootstrap/assets/js/main.js"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

