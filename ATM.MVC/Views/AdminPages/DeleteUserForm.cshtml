@model ATM.BLL.Models.DeleteCustomer;

@{

    Layout = "../Shared/_Layout3.cshtml";
}

<div class="container">

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                    <div class="d-flex justify-content-center py-4">
                        <a href="index.html" class="logo d-flex align-items-center w-auto">
                            <img src="assets/img/logo.png" alt="">
                            <span class="d-none d-lg-block">WOWBANK</span>
                        </a>
                    </div><!-- End Logo -->

                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                                <p class="text-center small">Enter your personal details to create account</p>
                            </div>

                            <form class="row g-3 needs-validation" asp-controller="AdminPages" asp-action="Delete" novalidate>
                                @if (@ViewBag.ErrMsg != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <strong>Error!</strong> @ViewBag.ErrMsg
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }
                                @if (@TempData["SuccessMsg"] != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <strong>Success!</strong> @TempData["SuccessMsg"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }

                                <div class="col-12">
                                    <label asp-for="@Model.CustomerCardNo" for="yourName" class="form-label">Enter Customer Card Number</label>
                                    <input type="text" name="name" class="form-control" id="yourName" asp-for="@Model.CustomerCardNo" required>
                                    <div class="invalid-feedback">Please, enter customer name!</div>
                                    <span asp-validation-for="CustomerCardNo" class="alert-danger"></span>
                                </div>

                              

                                <div class="col-12">
                                    <label asp-for="@Model.AdminPin" for="CardPin" class="form-label">Enter Admin Pin</label>
                                    <input type="password" name="CardPin" class="form-control" id="CardPin" asp-for="@Model.AdminPin" required>
                                    <div class="invalid-feedback">Please enter a valid card pin!</div>
                                    <span asp-validation-for="AdminPin" class="alert-danger"></span>
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Delete Account</button>
                                </div>

                            </form>

                        </div>
                    </div>


                </div>
            </div>
        </div>

    </section>

</div>